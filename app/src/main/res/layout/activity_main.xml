<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paisTextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="@drawable/germany">

    <TextView
        android:id="@+id/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/title_Background"
        android:padding="@dimen/paddingTitle"
        android:text="@string/title_Text"
        android:textColor="@color/title_Color"
        android:textSize="@dimen/title" />

    <TextView
        android:id="@+id/countryTextViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:text="@string/countryTextView"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="@dimen/title" />

    <ImageView
        android:id="@+id/flagImageView"
        android:layout_width="331dp"
        android:layout_height="@dimen/flagHeight"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:padding="@dimen/flagPadding"
        android:src="@drawable/bandeira"
        app:srcCompat="@drawable/bandeira"
        tools:src="@drawable/bandeira" />

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="@dimen/flagSize"
        android:layout_height="@dimen/flagHeight"
        android:layout_gravity="center"
        android:layout_margin="@dimen/flagPadding"
        android:layout_weight="2"
        android:src="@drawable/comida"
        app:srcCompat="@drawable/comida"
        tools:src="@drawable/comida" />

    <TextView
        android:id="@+id/foodTextViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:text="@string/foodTextView"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="@dimen/title" />


</LinearLayout>